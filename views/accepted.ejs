<%include ./partials/header %>
<h1 class="display">OPEN APPLICATIONS</h1>
<% if(approved.length<1){%>
    <p>NO OPEN APPLICATION</p>
    <% }else{%>
        <% approved.forEach(function(app){%>
            <div class="ui middle aligned animated list">
              <div class="item">
                <a class="ui tiny image" href="/review/<%=app._id%>">
                  <img src="<%= app.image %>">
                </a>
                <div class="content">
                  <a class="header" href="/review/<%=app._id%>"><%= app.firstname.toUpperCase() %> <%= app.lastname.toUpperCase() %></a>
                  <div class="description">
                    <p>Date of Application:  <%= app.created.toDateString() %> </p>
                  </div>
                </div>
             </div>
             <hr>
        <% }) %>
         <% }%>
<%include ./partials/footer %>