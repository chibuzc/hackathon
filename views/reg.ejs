<%include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">DRIVER'S LICENSE APPLICATION</div>


    <form class="ui form" action="/<%=Applicants._id%>/confirm" method="POST" enctype="multipart/form-data">
        <div class="field">
            <label>Image: </label>
            <input type="file" name="image" required>
        </div>
        
        <div class="field">
            <label>First Name: </label>
            <input type="text" name="firstname" placeholder="firstname" required>
        </div>
        
        <div class="field">
            <label>Last Name: </label>
            <input type="text" name="lastname" placeholder="lastname" required>
        </div>
        
        <div class="field">
            <label>Date Of Birth: </label>
            <input type="date" name="dob" required>
        </div>
        
         <div class="field">
            <label>Male</label>
            <input type="radio" value="male" name="sex" checked>
        </div>
        
        <div class="field">
            <label>Female</label>
            <input type="radio" value="female" name="sex">
        </div>
        
         <div class="field">
            <label>State Of Origin: </label>
            <input type="text" name="stateOfOrigin" placeholder="state" required>
        </div>
        
         <div class="field">
            <label>Occupation: </label>
            <input type="text" name="occupation" placeholder="occupation" required>
        </div>
        
         <div class="field">
            <label>Address: </label>
            <input type="text" name="address" placeholder="address" required>
        </div>
        
         <div class="field">
            <label>Email: </label>
            <input type="email" name="email" required>
        </div>
        
         <div class="field">
            <label>doc1</label>
            <input type="file" name="doc1" required>
        </div>
        
        <div class="field">
            <label>doc2</label>
            <input type="file" name="doc2" required>
        </div>
        
        
        <input class="ui blue button" type="submit" value="SUBMIT">
    </form>
</div>
<%include ./partials/footer %>