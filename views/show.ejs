<%include ./partials/header %>
<div class="ui main text container segment">
    <div class = "ui huge header">PERSONAL DETAILS</div>
    <div class = "ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="https://s3.amazonaws.com/hackathonchibuz/<%=Applicants.image%>" >
            
            <div class="description">
                <p>FIRST NAME: <%=Applicants.firstname%></p>
            </div>
            <div class="description">
                <p>SURNAME: <%=Applicants.lastname%></p>
            </div>
            <div class="description">
                <p>EMAIL: <%=Applicants.email%></p>
            </div>
            <div class = "descripton">
                    APPLICATION DATE: <%= Applicants.created.toDateString() %>
            </div>
        </div>
    </div>
</div>

<div class="ui main text container segment">
    <div class="ui huge header">APPLICATION</div>


    <form class="ui form" action="/<%=Applicants._id%>/apply" method="POST">
        <div class="field">
            <label>STATUS: </label>
            <select name="applicationType">
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
            </select>

        </div>
        
        <div class="field">
            <label>Driving Test Score: </label>
            <input type="number" name="testScore"
            min="0" max="100" step="1" value="30" required>
        </div>
        
        <div class="field">
            <label>State Issued</label>
            <input type="text" name="stateIssued" required>
        </div>
        
         <div class="field">
             <label>Renewal</label>
              <input type="radio" name="renewals" value="first application"> First Application
              <span><input type="radio" name="renewals" value="renewal"> Renewal</span>
        </div>
        
         <div class="field">
            <label>Residential Address</label>
            <input type="text"  placeholder="address" required>
        </div>

        
        <input class="ui blue button" type="submit" value="SUBMIT">
    </form>
        

<%include ./partials/footer %>